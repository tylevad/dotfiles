[user]
	name = Ty Levad
	email = tylevad@gmail.com
[alias]
  co = checkout
  cb = checkout -b
  pl = pull --rebase
  lg = log --oneline
  bl = branch --list
  dh = diff HEAD
  aa = add -A
  s = stash
  sp = stash pop
  rh = reset --hard
  rs = reset --soft
[core]
  editor = vim
  excludesfile = ~/.gitignore_global
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = cyan
[color "diff"]
  meta = red bold
  frag = yellow
  old = red
  new = green
[color "status"]
  added = yellow
  changed = green
  untracked = red
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[credential]
	helper = store
